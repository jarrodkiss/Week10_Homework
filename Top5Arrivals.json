{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "",
  "width": 1000,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/jarrodkiss/DataVis2/main/A2_Dataset.csv",
    "format": { "type": "csv" }
  },
  "params": [
    {
      "name": "currentYear",
      "value": 2024
    },
    {
      "name": "countrySelection",
      "select": {
        "type": "point",
        "fields": ["Country"],
        "bind": {
          "Country": {
            "input": "select",
            "options": ["China", "United Kingdom", "India", "United States of America"],
            "multiple": true,
            "labels": ["China", "United Kingdom", "India", "United States of America"]
          }
        }
      }
    }
  ],
  "transform": [
    {
      "filter": "(datum.Year >= (currentYear - 9)) && (datum.Country == 'New Zealand' || indexof(countrySelection, datum.Country) >= 0) && datum.Arrivals > 0"
    },
    {
      "calculate": "datetime(datum.Year, datum.Month - 1, 1)",
      "as": "Date"
    },
    {
      "aggregate": [
        { "op": "sum", "field": "Arrivals", "as": "TotalArrivals" }
      ],
      "groupby": ["Date", "Country"]
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": true,
        "interpolate": "linear",
        "clip": true
      },
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "title": "Date",
          "axis": {
            "format": "%Y-%m",
            "labelAngle": -45,
            "labelOverlap": "parity"
          }
        },
        "y": {
          "field": "TotalArrivals",
          "type": "quantitative",
          "title": "Number of Arrivals"
        },
        "color": {
          "field": "Country",
          "type": "nominal",
          "title": "Country",
          "scale": { "scheme": "category10" },
          "legend": {
            "orient": "top-right",
            "title": "Country",
            "titleOrient": "top",
            "columns": 1,
            "labelFontSize": 13,
            "titleFontSize": 13
          }
        },
        "tooltip": [
          { "field": "Country", "type": "nominal", "title": "Country" },
          {
            "field": "Date",
            "type": "temporal",
            "title": "Date",
            "format": "%B %Y"
          },
          {
            "field": "TotalArrivals",
            "type": "quantitative",
            "title": "Total Arrivals"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "circle",
        "size": 200,
        "color": "red"
      },
      "transform": [
        {
          "filter": "datum.Country == 'New Zealand' && year(datum.Date) == 2021 && month(datum.Date) == 2"
        }
      ],
      "encoding": {
        "x": { "field": "Date", "type": "temporal" },
        "y": { "field": "TotalArrivals", "type": "quantitative" }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -5,
        "fontSize": 16,
        "font": "Open Sans"
      },
      "transform": [
        {
          "filter": "datum.Country == 'New Zealand' && year(datum.Date) == 2021 && month(datum.Date) == 2"
        }
      ],
      "encoding": {
        "x": { "field": "Date", "type": "temporal" },
        "y": { "field": "TotalArrivals", "type": "quantitative" },
        "text": { "value": "April 2021 - Trans-Tasman Bubble Opened." },
        "color": { "value": "black" }
      }
    }
  ]
}
